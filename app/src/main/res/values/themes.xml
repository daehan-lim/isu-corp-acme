<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ACME" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="android:textColor">@color/dark_grey</item>

        <item name="md_corner_radius">16dp</item>
        <item name="md_font_title">@font/sfpro_display_regular</item>
        <item name="md_font_body">@font/sfpro_display_regular</item>

    </style>

    <style name="Theme.ACME.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ACME.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MaterialCalendarTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="android:textSize">@dimen/date_picker_text_size</item>
    </style>

    <style name="Theme.ACME.TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextInputHint</item>
        <item name="helperTextTextAppearance">@style/TextInputHint</item>
        <item name="counterTextAppearance">@style/TextInputCounter</item>
    </style>



</resources>