<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button_login">
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="list_item_ticket_general_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_address_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">@dimen/list_item_ticket_text_margin_start</item>
        <item name="android:visibility">visible</item>
        <item name="android:fontFamily">@font/sfpro_display_regular</item>
    </style>

    <style name="date_autocomplete_layout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/primaryColor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextInputHint" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/default_edit_text_hint_size</item>
    </style>

    <style name="TextInputCounter" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/default_edit_text_counter_size</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/design_bottom_navigation_text_size1</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/design_bottom_navigation_active_text_size1</item>
    </style>

    <style name="overview_heading_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/fragment_overview_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/fragment_overview_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/fragment_overview_heading_margin_top</item>
        <item name="android:fontFamily">@font/sfpro_display_regular</item>
        <item name="android:textSize">@dimen/fragment_overview_heading_text_size</item>
    </style>

    <style name="overview_normal_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/fragment_overview_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/fragment_overview_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/fragment_overview_client_margin_top</item>
        <item name="android:fontFamily">@font/sfpro_display_regular</item>
        <item name="android:textSize">@dimen/overview_normal_text_size</item>
    </style>

</resources>